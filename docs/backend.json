{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Perspectify application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity."
        }
      },
      "required": [
        "id"
      ]
    },
    "NutrientLog": {
      "title": "Nutrient Log",
      "type": "object",
      "description": "A log of the nutritional information for a single meal.",
      "properties": {
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the meal was logged."
        },
        "mealType": {
          "type": "string",
          "enum": ["breakfast", "lunch", "dinner", "snacks"],
          "description": "The type of meal."
        },
        "meal": {
          "type": "string",
          "description": "The description of the meal."
        },
        "calories": {
          "type": "number",
          "description": "Estimated calories in the meal."
        },
        "protein": {
          "type": "number",
          "description": "Estimated grams of protein in the meal."
        },
        "carbs": {
          "type": "number",
          "description": "Estimated grams of carbohydrates in the meal."
        },
        "fat": {
          "type": "number",
          "description": "Estimated grams of fat in the meal."
        }
      },
      "required": ["date", "mealType", "meal", "calories", "protein", "carbs", "fat"]
    },
    "MealPlan": {
      "title": "Meal Plan",
      "type": "object",
      "description": "A daily meal plan created by the user.",
      "properties": {
        "date": {
          "type": "string",
          "format": "date-time",
          "description": "The date the meal plan was created for."
        },
        "breakfast": {
          "type": "string",
          "description": "The breakfast plan."
        },
        "lunch": {
          "type": "string",
          "description": "The lunch plan."
        },
        "dinner": {
          "type": "string",
          "description": "The dinner plan."
        },
        "snacks": {
          "type": "string",
          "description": "The snacks plan."
        }
      },
      "required": ["date"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profile information. Path-based ownership ensures only the authenticated user can access their data."
        },
        "subcollections": [
          {
            "path": "nutrient_logs",
            "definition": {
              "entityName": "NutrientLog",
              "schema": {
                "$ref": "#/entities/NutrientLog"
              },
              "description": "A subcollection to store individual nutrient logs for a user."
            }
          },
          {
            "path": "meal_plans",
            "definition": {
              "entityName": "MealPlan",
              "schema": {
                "$ref": "#/entities/MealPlan"
              },
              "description": "A subcollection to store custom meal plans for a user."
            }
          }
        ]
      }
    ]
  }
}
